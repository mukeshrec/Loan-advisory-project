  <script>
    document.getElementById('advisorForm').addEventListener('submit', function (e) {
      e.preventDefault();
      const loanAmount = parseFloat(document.getElementById('loanAmount').value);
      const interestRate = parseFloat(document.getElementById('interestRate').value) / 100;
      const expectedReturn = parseFloat(document.getElementById('expectedReturn').value) / 100;
      const extraAmount = parseFloat(document.getElementById('extraAmount').value);
      let recommendation = '';
      if (interestRate > expectedReturn) {
        recommendation = "ðŸ’¡ You should use your extra money to <b>Prepay the Loan</b> for better savings.";
      } else {
        recommendation = "ðŸ’¹ You should consider <b>Investing</b> the extra amount for higher returns.";
      }
      const baseInterest = loanAmount * interestRate * 20;
      const reducedInterest = loanAmount * interestRate * 18;
      const interestSaved = baseInterest - reducedInterest;
      document.getElementById('recommendationText').innerHTML = recommendation;
      document.getElementById('interestSavedText').innerHTML =
        "ðŸŽ¯ <b>Estimated Interest Saved:</b> â‚¹" + interestSaved.toFixed(2);
      document.getElementById('resultBox').style.display = 'block';
    });
    function toggleTheme() {
      const body = document.body;
      body.classList.toggle('dark');
      body.classList.toggle('light');
    }
  </script>
